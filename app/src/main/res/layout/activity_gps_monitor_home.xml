<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/view_group_parent"
    android:background="@color/bg_default"
    android:orientation="vertical">

    <com.tan.mvpdemo.uitl.TitleView
        android:id="@id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#47a1f5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/distance_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总数"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="0"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_little" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#6be77b"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/distance_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/txt_on_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="0"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_little" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#f4c947"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/distance_5">

            <TextView
                android:id="@+id/Invalid_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="失效"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/txt_invalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="0"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_little" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#b3a3a5"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/distance_5">

            <TextView
                android:id="@+id/Off_line_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离线"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/txt_off_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="0"
                android:textColor="@color/font_white"
                android:textSize="@dimen/font_size_little" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_base"
        style="@style/list_style"
        android:divider="@color/bg_default"
        android:dividerHeight="@dimen/distance_10"
        android:paddingTop="@dimen/distance_10" />
</LinearLayout>
